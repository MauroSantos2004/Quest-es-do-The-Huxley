dicionario = {1: 5.30, 2: 6.00, 3: 3.20, 4: 2.50}

valores  = int(input()) # Produto
quantia = int(input()) # Quantidade de produtos

preco = dicionario[valores] * quantia
desc = preco * 15 /100

if quantia >= 15:
    final = preco - desc
    print(f'R$ {final:.2f}')

elif preco >= 40 :
    final = preco - desc
    print(F'R$ {final:.2f}')

else:
    print(f'R$ {preco:.2f}')
